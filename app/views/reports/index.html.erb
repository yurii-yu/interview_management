<div class="page-header">
  <%= link_to new_report_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Report
  <% end %>
  <h1>面试反馈</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-condensed table-bordered table-hover">
    <thead>
      <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Position</th>
            <th class="text-center">Interview date</th>
        <th colspan='2' class="text-center">Action</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @reports) do |report| %>
            <td><%= link_to report.name, report %></td>
            <td><%= link_to report.position, report %></td>
            <td><%= link_to report.interview_date, report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %> </td> 
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
